# Automatically generated through chef
# mongodb.conf

# http://www.mongodb.org/display/DOCS/File+Based+Configuration

# dbpath
dbpath = <%= node['mongodb']['config']['dbpath'] %>

# logpath
logpath = <%= node['mongodb']['config']['logpath'] %>

# Whether the log file appended?
<% if node[:mongodb][:config][:logappend] %>
logappend = true
<% end %>

#If replica_name specified
<% unless @replica_name.nil? %>
replSet = <%= @replica_name %>
<% end %>

# Turn on rest API 
<% if node[:mongodb][:config][:rest] %>
rest = true
<% end %>

# Enables periodic logging of CPU utilization and I/O wait
<% if node[:mongodb][:config][:cpu] %>
cpu = true
<% end %>

# Security on
<% if node[:mongodb][:config][:auth] %>
auth = true
<% else %>
noauth = true
<% end %>

# Verbose logging 
<% if node[:mongodb][:config][:verbose] %>
verbose = true
<% end %>

# Quiet logging 
<% if node[:mongodb][:config][:quiet] %>
quiet = true
<% end %>

#Enable journal explicitly
<% if !node[:mongodb][:config][:nojournal] %>
journal = true
<% end %>

