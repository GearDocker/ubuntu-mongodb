
EXIT_STATUS_FILE="/tmp/file_exit_status"
chef-solo -c /var/chef-solo/solo.rb -j /var/chef-solo/chef.json -l debug
EXIT_STATUS_CONFIG_RUN=$?
if test -s "$EXIT_STATUS_FILE";then
   FILE_EXIT_STATUS=`cat $EXIT_STATUS_FILE`
   rm -rf $EXIT_STATUS_FILE
   EXIT_STATUS=$FILE_EXIT_STATUS
else
   EXIT_STATUS=$EXIT_STATUS_CONFIG_RUN
fi
echo "EXIT STATUS = $EXIT_STATUS"
exit $EXIT_STATUS
